@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@Scripts.Render("~/scripts/Validator/jquery.validate.js")

@*onfocus="this.placeholder = ''" onblur="this.placeholder = 'Campsite name.'" placeholder="Campsite name."*@
<form id="main" method="post">
    <fieldset>
        <legend>Camping Form</legend>
        <div class="container">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="campsiteName">Campsite Name:</label>
                    <input type="text" id="campsiteName" name="campsiteName" class="form-control short" />
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label for="description">Campsite description:</label>
                    <textarea name="description" rows="5" class="form-control short" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Write a description of the campsite.'" placeholder="Write a description of the campsite."></textarea>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label for="shortDescription">Short description:</label>
                    <textarea name="shortDescription" class="form-control short" onfocus="this.placeholder = ''" onblur="this.placeholder = 'The elevator pitch for the campsite.'" placeholder="The elevator pitch for the campsite."></textarea>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <div class="dropdown">
                        <button class="btn btn-basic dropdown-toggle" type="button" data-toggle="dropdown" name="scenicRating">
                            @*Not sure where to put name or value*@
                            Scenic Rating:
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a value="1">1</a></li>
                            <li><a value="2">2</a></li>
                            <li><a value="3">3</a></li>
                            <li><a value="4">4</a></li>
                            <li><a value="5">5</a></li>
                            <li><a value="6">6</a></li>
                            <li><a value="7">7</a></li>
                            <li><a value="8">8</a></li>
                            <li><a value="9">9</a></li>
                            <li><a value="10">10</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label for="latitude">Latitude:</label>
                    <input type="text" name="latitude" class="form-control short" />
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label for="longitude">Longitude:</label>
                    <input type="text" name="longitude" class="form-control short" />
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <label for="directions">Directions:</label>
                    <textarea name="directions" class="form-control short" onfocus="this.placeholder = ''" onblur="this.placeholder = 'No using fingers to point.'" placeholder="No using fingers to point."></textarea>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
                <!-- </div> -->
                <!-- <div class="col-lg-3"> -->
                <div class="form-group">
                    <p><strong>Hiking nearby:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="hiking" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="hiking" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Bycicle routes nearby:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="biking" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="biking" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Fishing nearby:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="fishing" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="fishing" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Pet friendly:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="pet" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="pet" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Children's playground nearby:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="playground" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="playground" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Handicapped accessible:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="handycap" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="handycap" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <!-- </div> -->
                <!-- <div class="col-lg-3"> -->
                <div class="form-group">
                    <p><strong>Recreactionial vehical access:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="recreactionVehical" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="recreactionVehical" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Tent use:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="tent" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="tent" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>On site showers:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="shower" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="shower" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Furnished restrooms:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="restroom" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="restroom" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <p><strong>Port-a-potty:</strong></p>
                    <div class="radio">
                        <label><input type="radio" name="portapotty" value="true" />Yes</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="portapotty" value="false" />No</label>
                    </div>
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <div class="form-group">
                    <label for="validated">Date of last visual check of campsite:</label>
                    <input type="date" name="validated" />
                    <div class="col-sm-5 messages"></div>
                </div>
                <br />
                <br />
            </div>
        </div>
        <input type="submit" value="Save" />
        @*onclick="myFunction()"*@
    </fieldset>
</form>
<br />
<br />

<script>
    $(document).ready(function () {
        $("#main").validate({
            // These are the constraints used to validate the form
            rules: {
                campsiteName: "required"
            },
            messages: {
                campsiteName: "Please enter a Campsite Name."
            },

            errorElement: "em",
            errorPlacement: function (error, element) {
                // Add the `help-block` class to the error element
                error.addClass("help-block");
                if (element.prop("type") === "checkbox") {
                    error.insertAfter(element.parent("label"));
                } else {
                    error.insertAfter(element);
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(element).parents(".col-md-6").addClass("has-error").removeClass("has-success");
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).parents(".col-md-6").addClass("has-success").removeClass("has-error");
            }
        });
    });
</script>



